<UserControl x:Class="GrabMarket.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GrabMarket.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="880">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label HorizontalAlignment="Center" FontSize="40">Welcome to the GrabMarket!</Label>
            <Label HorizontalAlignment="Center" FontSize="40">Choose the mode</Label>
        </StackPanel>

        <Button Grid.Row="1" FontSize="45" Width="300" Height="100" Command="{Binding ToThePanel}" CommandParameter="Manager">Manager</Button>
        <Button Grid.Row="2" FontSize="45" Width="300" Height="100" Command="{Binding ToThePanel}" CommandParameter="Cashier">Cashier</Button>
    </Grid>

</UserControl>
